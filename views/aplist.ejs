<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
	async function post_deleteap(e) {
	  var isDelete = confirm("삭제하시겠습니까?");
	  if(isDelete) {
		  console.dir(e.id);
		  
		  const response = await axios.post("http://localhost:3000/deleteap", {apnum: e.id});

		  location.reload(); 
	  }
	}
</script>

<script>
	async function post_updateAP(e) {
	  var isUpdate = confirm("변경 하시겠습니까?");
	  if(isUpdate) {
		  console.dir(e.id);
		  
		  const response = await axios.post("http://localhost:3000/ape", {apnum: e.id});

		  location.reload();
	  }
	}
</script>

<script>
	async function editAP(apnum) { 
	  location.href = "/ape?apnum=" + apnum;
	}
</script>


</head> 
<body class="cbp-spmenu-push">
	<div class="main-content">
	<div class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
		<!--left-fixed -navigation-->
		<%- include('sidebar'); -%>
	</div>
		<!--left-fixed -navigation-->
		<%- include('headermenu'); -%>
		<!-- header-starts -->
		
		<!-- //header-ends -->
		<!-- main content start-->
		<div id="page-wrapper">
			<div class="main-page">
				<div class="tables">
					<h2 class="title1">AP-> 정보</h2>
					<div class="panel-body widget-shadow">
						<h4>AP 상세 정보</h4>
						<table class="table">
							<thead>
								<tr>
								  <th>#</th>
								  <th>Ap num</th>
								  <th>MAC Address</th>
								  <th>IP Address</th>
								  <th>Firmware Version</th>
								  <th>설치일</th>
								  <th>설치 장소</th>
								  <th>담당자</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<% for(i=0; i < aplist.length; i++){ %>
										<tr>
										 <td><%=i+1%></td>
										 <td><%= aplist[i].apnum %></td>
										 <td><%= aplist[i].mac %></td>
										 <td><%= aplist[i].ip %></td>
										 <td><%= aplist[i].fwv %></td>
										 <td><%= aplist[i].idate %></td>
										 <td><%= aplist[i].location %></td>
										 <td><%= aplist[i].admn %></td>
										 <td style="color:blue" onclick="editAP('<%= aplist[i].apnum %>')">EDIT |
										 <span style="color:red" id="<%= aplist[i].apnum %>" onclick="post_deleteap(this)"> DELETE</span> </td>
										</tr> 
									   <% }  %>
								</tr>
								
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
		<!--footer-->
		<%- include('footer'); -%>
        <!--//footer-->
	</div>
	
	<!-- side nav js -->
	<script src='js/SidebarNav.min.js' type='text/javascript'></script>
	<script>
      $('.sidebar-menu').SidebarNav()
    </script>
	<!-- //side nav js -->


	
	<!-- Classie --><!-- for toggle left push menu script -->
		<script src="js/classie.js"></script>
		<script>
			var menuLeft = document.getElementById( 'cbp-spmenu-s1' ),
				showLeftPush = document.getElementById( 'showLeftPush' ),
				body = document.body;
				
			showLeftPush.onclick = function() {
				classie.toggle( this, 'active' );
				classie.toggle( body, 'cbp-spmenu-push-toright' );
				classie.toggle( menuLeft, 'cbp-spmenu-open' );
				disableOther( 'showLeftPush' );
			};
			
			function disableOther( button ) {
				if( button !== 'showLeftPush' ) {
					classie.toggle( showLeftPush, 'disabled' );
				}
			}
		</script>
	<!-- //Classie --><!-- //for toggle left push menu script -->
	
	<!--scrolling js-->
	<script src="js/jquery.nicescroll.js"></script>
	<script src="js/scripts.js"></script>
	<!--//scrolling js-->
	
	<!-- Bootstrap Core JavaScript -->
	<script src="js/bootstrap.js"> </script>
	
</body>
</html>